{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "lib": [
      "es2017"
    ],
    "allowJs": true,
    // "checkJs": true,                 
    "jsx": "react-native",
    "baseUrl": ".",
    "paths": {
      "*": [
        "src/*"
      ],
      "tests": [
        "tests/*"
      ],
      "@components/*": [
        "src/components/*"
      ],
      "@features/*": [
        "src/features/*"
      ],
      "@themes/*": [
        "src/themes/*"
      ],
      "@reduxModule/*": [
        "src/reduxModule/*"
      ],
      "@navigation/*": [
        "src/navigation/*"
      ],
      "@libs/*": [
        "src/libs/*"
      ],
      "@behaviour/*": [
        "/src/behaviour/*"
      ]
    },
    "noEmit": true,
    "strict": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": false
  },
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ]
}